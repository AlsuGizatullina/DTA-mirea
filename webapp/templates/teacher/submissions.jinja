{% extends 'layout.jinja' %}
{% block content %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="collapse navbar-collapse container">
            <ol class="breadcrumb bg-light pt-2 pb-2 m-0">
                <li>
                    <a class="logo-container text-decoration-none" href="/teacher">
                        <div class="logo">
                            <img class="logo-img" src="{{ url_for('static', filename='logo.svg') }}"/>
                        </div>
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    Преподавательская
                </li>
            </ol>
            <a class="breadcrumb-item text-decoration-none" href="/teacher/logout">
                Выйти
            </a>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-12 mt-3">
                <h5 class="card-title fw-bold mb-2">
                    Отправленные решения
                </h5>
                <h6 class="card-subtitle mb-3 text-muted">
                    Новые решения показаны сверху
                </h6>
            </div>
            {% if submissions is defined and submissions|length > 0 %}
                {% for submission in submissions %}
                    <article class="mb-4">
                        <h6 class="card-title fw-bold mb-1">
                            Задача <a href="{{ submission[0].status.submission_url }}" class="badge alert-primary"
                                      style="font-size: inherit; text-decoration: none">№{{ submission[0].status.task + 1 }}</a>,
                            вариант <span class="badge alert-secondary"
                                          style="font-size: inherit">№{{ submission[0].status.variant + 1 }}</span>,
                            группа <a href="/group/{{ submission[0].status.group }}" class="badge alert-primary"
                                      style="font-size: inherit; text-decoration: none">{{ submission[0].status.group_title }}</a>,
                            студент <span class="badge alert-secondary"
                                          style="font-size: inherit">{{ submission[1].email }}</span>,
                            id <span class="badge alert-secondary"
                                     style="font-size: inherit">{{ submission[1].id }}</span>
                        </h6>
                        <div class="mb-2 text-uppercase">
                            <span class="badge alert-{{ submission[0].status.color }}">{{ submission[0].status.name }}</span>
                            <span class="badge alert-light">Отправлено: {{ submission[0].sent.strftime('%d.%m.%Y %H:%M') }}</span>
                            <span class="badge alert-light">Проверено: {{ submission[0].checked.strftime('%d.%m.%Y %H:%M') }}</span>
                        </div>
                        {% if submission[0].status.error_message is not none and submission[0].status.error_message %}
                            <div>Подробные сведения об ошибке:</div>
                            <div class="text-muted mb-2"
                                 style="white-space: pre-wrap">{{ submission[0].status.error_message | e }}</div>
                        {% else %}
                            <div class="mb-2"></div>
                        {% endif %}
                        <textarea
                                name="code"
                                type="text"
                                class="form-control"
                                disabled
                                rows="{{ submission[0].linesCount }}"
                                placeholder="Ответ на задание"
                                style="font-family: monospace;">{{ submission[0].code }}</textarea>
                    </article>
                {% endfor %}
            {% else %}
                Список отправленных решений пуст
            {% endif %}
        </div>

        {% if highlight %}
            <script src="{{ url_for('static', filename='js/codemirror.min.js') }}"></script>
            <script src="{{ url_for('static', filename='js/python.min.js') }}"></script>
            <script type="text/javascript">
                codeElements = document.getElementsByName("code")
                for (codeElement of codeElements) {
                    const editor = CodeMirror.fromTextArea(
                        codeElement,
                        {
                            mode: 'python',
                            lineNumbers: true,
                            indentUnit: 4,
                            readOnly: true,
                            height: 'auto',
                            viewportMargin: Infinity
                        }
                    )
                }
            </script>
        {% endif %}
    </div>
{% endblock %}

